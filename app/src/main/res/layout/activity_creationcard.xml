<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_marginHorizontal="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Создание карты пациента"
            android:textSize="24sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Пропустить" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Без карты пациента вы не сможете заказать анализы" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В картах пациентов будут храниться результаты аализов вас и ваших близких"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="138dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:height="48dp"
        android:width="50dp"
        android:background="@drawable/edittextcorners"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="left|center"
        android:hint="Имя"
        android:paddingLeft="10dp"

        />
    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:height="48dp"
        android:width="50dp"
        android:background="@drawable/edittextcorners"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="left|center"
        android:hint="Отчество"
        android:paddingLeft="10dp"
        />
    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:height="48dp"
        android:width="50dp"
        android:background="@drawable/edittextcorners"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="left|center"
        android:hint="Фамилия"
        android:paddingLeft="10dp"

        />
    <EditText
        android:id="@+id/birthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:height="48dp"
        android:width="50dp"
        android:background="@drawable/edittextcorners"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="left|center"
        android:hint="Дата рождения"
        android:paddingLeft="10dp"


        />
    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:height="48dp"
        android:width="50dp"
        android:background="@drawable/edittextcorners"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="left|center"
        android:hint="Пол"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать"
        app:cornerRadius="10dp"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:height="56dp"
        android:layout_marginHorizontal="8dp"
        android:backgroundTint="#C9D4FB"
/>


</androidx.appcompat.widget.LinearLayoutCompat>